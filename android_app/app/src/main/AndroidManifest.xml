<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bh.fittingsimulator">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        >
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".CalibrationActivity"></activity>
        <activity android:name=".PermissionActivity"></activity>
        <activity android:name=".SelectClothesActivity"></activity>
        <activity android:name=".ModelingFailActivity"></activity>
        <activity android:name=".ModeleingSuccessActivity"></activity>
        <activity android:name=".ModelingActivity"></activity>
        <activity android:name=".CalibrationExplainActivity"></activity>

        <activity android:name=".MenuExplainActivity"
            android:theme="@style/Transparent">
        </activity>


        <activity android:name=".SplashActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>